

.large-3.large-centered.columns
  .login-box
    .row
      .large-12.columns
        = form_tag sessions_path do
          .row
            .large-12.columns.field
              = label_tag :email
              = text_field_tag :email, params[:email]
          .row
            .large-12.columns.field
              = label_tag :password
              = password_field_tag :password
          .row
            .large-12.large-centered.columns.actions
              = submit_tag "Log In", class: "button expand"

